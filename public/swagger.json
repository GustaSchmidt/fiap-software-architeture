{
  "swagger": "2.0",
  "info": {
    "title": "API Food Delivery",
    "description": "API para gerenciamento delivery de comida",
    "version": "1.0.0"
  },
  "securityDefinitions": {
    "ApiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "Informe o token no formato: Bearer {seu_token}"
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "tags": [
    {
      "name": "Cliente",
      "description": "Operações relacionadas a clientes"
    }
  ],
  "paths": {
    "/api/client/{id}": {
      "get": {
        "tags": ["Cliente"],
        "summary": "Buscar cliente por ID",
        "description": "Retorna informações sobre o cliente com o ID especificado, validando o CPF no payload.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do cliente"
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente encontrado"
          },
          "404": {
            "description": "Cliente não encontrado"
          }
        }
      }
    },
    "/api/client/create": {
      "post": {
        "summary": "Criar um novo cliente",
        "tags": ["Cliente"],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do usuario usados no cadastro",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["nome", "sobrenome", "email", "cpf", "senha"],
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "João"
                },
                "sobrenome": {
                  "type": "string",
                  "example": "Silva"
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "joao.silva@example.com"
                },
                "cpf": {
                  "type": "string",
                  "example": "123.456.789-00"
                },
                "senha": {
                  "type": "string",
                  "format": "md5",
                  "example": "a8748f31d542005abb46c2e835215913"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Cliente criado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "integer", "example": 1 },
                "message": { "type": "string", "example": "Cliente criado com sucesso" }
              }
            }
          },
          "400": {
            "description": "Erro de validação"
          },
          "401": {
            "description": "Não autorizado"
          }
        }
      }
    },
    "/api/client/update": {
      "post": {
        "tags": ["Cliente"],
        "summary": "Atualizar cliente",
        "description": "Atualiza as informações do cliente existente.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Cliente atualizado com sucesso"
          }
        }
      }
    },
    "/api/client/delete": {
      "post": {
        "tags": ["Cliente"],
        "summary": "Deletar cliente",
        "description": "Deleta o cliente do aplicativo.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Cliente deletado com sucesso"
          }
        }
      }
    }
  }
}